# -*- mode: conf-space; -*-
escape ^Jj

# status line
hardstatus off
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %m-%d %{W} %c %{g}]'

# scrolling
termcapinfo xterm* ti@:te@

# misc
startup_message off
vbell off

# start windows at 1
bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1
